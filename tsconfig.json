{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vscode", "node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/test/**",
    "node_modules",
    "out"
  ]
}
